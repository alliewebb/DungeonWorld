<h3>Welcome, {{users.name}}</h3>
<div class="row">
  
    <div class="col s5">
      <i class="material-icons prefix large">person</i>
      <div>
        {{#each characters}}
          <ul class="collection s6">
            <li class="collection-item black"><a class="white-text" href='/character/{{id}}' >{{char_name}}</a></li>
          </ul>
        {{/each}}
      </div>
    </div>
    <div class="col s1 offset-s2">
          <i class="material-icons prefix large">person_add</i>
    </div>
    <div class="col s5 offset-s1">
      {{!-- <h4 class="black white-text">New campaign?</h4> --}}
        
          <input class="btn black" value="Create New Character" onclick="location.href='/profile/{{users.id}}/add'" />
        </div>
    </div>
</div>
